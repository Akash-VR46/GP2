' trash alias: rsd

: prefix-test-rule  $( -- n )
	1 registers
	rss
	tst 23 10  0
	rsr
	0 $$@
;
: prefix-loop-rule  $( -- n )
	1 registers
	rss
	loo 99 0
	rsr
	0 $$@
;


: bind-node   $( -- elem )
	1 registers
	rss
		bnd s0 0
	rsr

	rst s0
	0 $$@
	ubr 0
;
: bind-node-plus-loop  ( -- node edge )
	2 registers
	rss
		bnd s0 0 
		blo 0  1
	rsr

	rst s0
		0 $$@
		1 $$@
	ubr 0
	ubr 1
;
: failing-bind-two-loops $( -- )
	3 registers
	rss
		bnd s0 0
		blo 0  1
		blo 0  2
	rsr
	rst s0

	ubr 0
	ubr 1
	ubr 2
;

